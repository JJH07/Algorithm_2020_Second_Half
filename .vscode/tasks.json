{
    "version": "2.0.0",
    "runner": "terminal",
    "type": "shell",
    "echoCommand": true,
    "presentation": {
        "reveal": "always"
    },
    "tasks": [
        {
            "label": "[Win] build_gcc",
            "command": "gcc",
            "args": [
                "$(file)",
                "-o",
                "$(fileDirname)/$(fileBasenameNoExtention}"
            ],
            "group": "build",
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "$(workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "[Win] build_g++",
            "command": "g++",
            "args": [
                "$(file)",
                "-o",
                "$(fileDirname)/$(fileBasenameNoExtention}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "$(workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "[Win] execute",
            "command": "cmd",
            "group": "test",
            "args": [
                "/C", "$(fileDirname)\\$(fileBasenameNoExtension}"
            ]
        },
        {
            "label": "[LINUX] build_gcc",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtention}.out"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "[LINUX] build_g++",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-std=c++17",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtention}.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "[LINUX] exec",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtention}.out",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}